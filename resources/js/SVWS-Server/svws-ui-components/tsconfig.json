{
	"compilerOptions": {
		"jsx": "preserve",
		"allowJs": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"importHelpers": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": ["dom", "esnext"],
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"types": ["unplugin-icons/types/vue"]
	},
	"include": [
		"src/**/*.vue",
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": ["node_modules", "dist", "src/stories", "build"]
}